<resources>
    <style name="AppTheme" parent="@style/AppBaseTheme">

    </style>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏和标题颜色-->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--溢出菜单图标颜色-->
        <item name="android:colorControlNormal">@color/white</item>

        <!--箭头-->\
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!--溢出菜单文字颜色-->
        <item name="android:textAppearanceLargePopupMenu">@style/OverflowMenuTextAppearance</item>
        <!--菜单点击selector-->
        <item name="android:actionBarItemBackground">@drawable/abc_item_background_holo_dark</item>
    </style>


    <!-- 左边的箭头指示-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!--溢出菜单文字样式-->
    <style name="OverflowMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/overflowTextColor</item>
    </style>
<!--
    <style name="Apptheme" parent="AppTheme.Base">
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
    </style>-->
</resources>
